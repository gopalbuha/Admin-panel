<style>
  table {
    width: 100%;
    border-collapse: collapse;
  }

  th,
  td {
    border: 1px solid #ddd;
    padding: 8px;
    text-align: left;
  }

  th {
    background-color: #ddd;
    font-weight: bold;
  }

  tr:nth-child(even) {
    background-color: #f2f2f2;

  }
</style>
<div class="card">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table id="order-listing" class="table" action="/productView" , method="GET" enctype="multipart/form-data">

            <thead>
              <tr>
                {{!-- <th>Id</th> --}}
                <th><b>Name</b></th>
                <th><b>Category</b></th>
                <th><b>Price</b></th>
                {{!-- <th><b>Discount</b></th>--}}
                <th><b>Image</b></th>
                <th><b>Edit</b></th>
                <th><b>Delete</b></th>
              </tr>
            </thead>
            <tbody>

              {{#each productData}}
              <tr>
                {{!-- <td>{{id}}</td> --}}
                <td>{{name}}</td>
                <td>{{Category}}</td>
                <td>{{price}}</td>
                {{!-- <td>{{discount }}</td> --}}
                <td class="p-2">
                  <img src="images/{{thumbnail}}" alt="" class="rounded-lg"
                    style="width: 100px; height: 100px; object-fit: cover; margin-left: 23%;">
                </td>
                <td><a href="productUpdate/{{id}}"><button class="btn-xs btn-success rounded-lg">Edit</button></a>
                </td>
                <td><button id="removeCategory" onclick="productUpdate('{{id}}')" class="btn-xs btn-danger rounded-lg"
                    data-id="{{id}}">Delete</button></td>
              </tr>
              {{/each}}
            </tbody>
          </table><br><br>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- plugins:js -->
<script src="../table/vendors/js/vendor.bundle.base.js"></script>
<script src="../table/vendors/js/vendor.bundle.addons.js"></script>
