<div class="container">
    <h1>SubCategory Add</h1>
    <p>Add SubCategory Details.</p>
    <hr>
</div>
<form >
    <div class="container">
        <label><b>category :</b></label>
        <select type="category" name="category" id="categories">
            <option disabled selected><b>Select Category</b></option>
            {{#each getCategory}}
            <option value="{{id}}">{{category}} </option>
            {{/each}}
        </select>
        <label for="uname"><b>subCategory :</b></label>
        <input type="subCategory" name="subCategory" id="subCategory" placeholder="Enter subCategory" required><br><br>
        {{!-- <input type="category" name="category" placeholder="select category" id="myInput" required> --}}
        <button type="submit" class="button" onclick="subCategoryAdd()"><b>Submit</b></button>
    </div>
</form>

<script>
    function subCategoryAdd() {
        event.preventDefault();
        var categories = $('#categories').val();
        var subCategory = $('#subCategory').val();
        $.ajax({
            type: "POST",
            url: "/sub-category/add",
            dataType: 'json',
            data: { category: categories,subCategory: subCategory },
            success: function (data) {
                if (data.status) {
                    Swal.fire(
                        'Added',
                        'Your data has been added.',
                        'success'
                    ).then(function () {
                        window.location.href = '/sub-category/list';
                    });
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message,
                    });
                }
            },
            error: function (error) {
                alert(error.responseJSON.message);
            }
        });
    }
</script>